<!ELEMENT group (checked|unchecked)>
<!ELEMENT season (checked|unchecked)>
<!ELEMENT ticket_plans (checked|unchecked)>
<!ELEMENT individual (checked|unchecked)>
<!ELEMENT how_contact (email|phone|mail)>
<!ELEMENT email (#PCDATA)>
<!ELEMENT phone (#PCDATA)>
<!ELEMENT mail (#PCDATA)>
<!ELEMENT comments (#PCDATA)>

<!ENTITY zero "0">
<!ENTITY more_1 "1-5">
<!ENTITY more_6 "6-10">
<!ENTITY more_11 "11-20">
<!ENTITY more_21 "21-40">
<!ENTITY more_41 "41-81">

<!ENTITY checked "checked">
<!ENTITY unchecked "unchecked">

<!ENTITY email "E-Mail">
<!ENTITY phone "Phone">
<!ENTITY mail "Mail">

<!ENTITY California "CA">
<!ENTITY Massachusetts "MA">
<!ENTITY NewYork "NY">
<!ENTITY Pennsylvania "PA">
<!ENTITY Non-US "NA">

<!ENTITY US "US">
<!ENTITY Canada "CA">
<!ENTITY UK "UK">]>

